<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/llincis"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="right"
    >

    <LinearLayout
        android:id="@+id/vv1"
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:background="@drawable/chat_bubble_saffrony"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_5dp"
        android:paddingRight="@dimen/pad_chat_item"
        android:paddingBottom="@dimen/pad_5dp"
        android:layout_marginStart="@dimen/pad_10dp"
        android:paddingStart="@dimen/pad_15dp"
        android:paddingEnd="@dimen/pad_chat_item">

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" />

        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="@string/sd"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lbl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vv1"
        android:layout_marginRight="@dimen/pad_20dp"
        android:layout_marginTop="@dimen/pad_5dp"
        android:text="@string/textvdv"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_14sp"
        tools:ignore="ObsoleteLayoutParam"
        android:layout_marginEnd="@dimen/pad_20dp" />

</LinearLayout>